#!/bin/bash
max_age="$1"
fn="$2"

if [ ! -f "$fn" ]; then
        if [ ! -d "$fn" ]; then
                echo "$0: error: could not find \"$fn\"" 1>&2
                exit 1
        fi
fi
age=`age_in_days "$fn"`
if [ "$age" -gt "$max_age" ]; then
        exit 0
else
        echo "$fn not older than $max_age days" 1>&2
        exit 1
fi

exit
bx $dp/git/bin/age_in_days.gt 300 $HOME/dp/git/diagnostic-tool/dt.tar